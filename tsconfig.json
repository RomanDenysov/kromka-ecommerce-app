{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["dom", "dom.iterable", "ES2022"],
		"types": ["react", "react-dom", "node"],
		"allowJs": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"forceConsistentCasingInFileNames": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"~/*": ["./src/*"],
			"~/app/*": ["./src/app/(app)/*"],
			"@payload-config": ["./src/server/payload/payload.config.ts"]
		},
		"target": "ES2022"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.cjs",
		"**/*.js",
		".next/types/**/*.ts",
		"tailwind.config.mjs"
	],
	"exclude": ["node_modules"]
}
